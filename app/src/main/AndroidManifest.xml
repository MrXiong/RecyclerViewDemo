<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhuyongit.recyclerviewdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BasicRecyclerView"
            android:label="@string/title_activity_basic_recycler_view"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".GridRecyclerView"
            android:label="@string/title_activity_grid_recycler_view"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".StaggerGridRecyclerView"
            android:label="@string/title_activity_stagger_grid_recycler_view"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".SwipeRefreshRecyclerView"
            android:label="@string/title_activity_swipe_refresh_grid_recycler_view"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
